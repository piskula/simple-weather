<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppWidgetSection" parent="@android:style/Widget">
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">&#64;android:color/white</item>
    </style>

    <style name="AppWidgetLabel" parent="AppWidgetText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppWidgetText" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">&#64;android:color/black</item>
    </style>

    <style name="AppWidgetButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="StatusButtonParent" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="ButtonOn" parent="StatusButtonParent">
        <item name="android:background">@color/colorPrimaryDark</item>
        <!--<item name="android:background">@color/colorOn</item>-->
        <item name="android:text">@string/statusOn</item>
    </style>

    <style name="ButtonOff" parent="StatusButtonParent">
        <item name="android:background">@color/colorDisabled</item>
        <!--<item name="android:background">@color/colorOff</item>-->
        <item name="android:text">@string/statusOff</item>
    </style>

    <style name="ButtonPrimaryDark" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

</resources>
